<launch>

    <!--remap from="odom" to="wheelenc" -->
    <!-- <include file ="$(find kobuki_node)/launch/minimal.launch"/> -->
    <!-- <include file="$(find turtlebot_bringup)/launch/minimal.launch"/> -->

    <!--remap-->
    <node pkg = "tf"
        type = "static_transform_publisher"
        name = "camera_broadcaster"
        args = "0 0 0.7 0 0 0 1 base_link sensor_link 50" />
    <node pkg = "tf"
        type = "static_transform_publisher"
        name = "basefoot2link_broadcaster"
        args = "0 0 0.01 0 0 0 1 base_footprint base_link 50" />
    <node pkg = "tf"
        type = "static_transform_publisher"
        name = "world2odom_broadcaster"
        args = "0 0 0 0 0 0 1 /world /odom 50" />
    <node pkg = "tf"
        type = "static_transform_publisher"
        name = "os12sensor_broadcaster"
        args = "0 0 0 0 0 0 1 /sensor_link /os1 50" />
    <node pkg = "tf"
        type = "static_transform_publisher"
        name = "cam2os1_broadcaster"
        args = "0 0 0 0 0 0 1 /camera_link /os1 50" />
    <!-- <include file ="$(find cameras)/launch/marker_testing2.launch"/> -->

    <node pkg="joy" type="joy_node" name="joystick"/>

    <node pkg ="mapping" type="map_build_node" name="map_build_node" respawn="true" >
    	<param name="base_height" value="0.03"/>
    	<param name="robot_width" value ="0.4"/>
    </node>

    <node pkg="mapping" type="mapping" name="mapping" respawn="true">
    	<param name="length_in_x" value ="11.0"/>
    	<param name="length_in_y" value="11.0"/>
    	<param name="resolution" value ="0.4"/>
    	<param name="sensor_processor/type" value="Kinect"/>
    	<param name="surface_normal_estimation_radius" value="0.990"/>
    	<param name="sensor_processor/ignore_points_above" value="0.5"/>
    	<param name="sensor_processor/ignore_points_below" value="0.02"/>
    	<param name ="point_cloud_topic" value="/camera/depth/points"/>
    </node>

</launch>
